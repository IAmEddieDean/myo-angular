nav.navbar.navbar-inverse(ng-controller='NavCtrl')
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(ui-sref='home') Kinecision
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-left(ng-show='activeUser')
        li: a(ui-sref='decisions'): i.fa.fa.fa-cubes &nbsp; Decisions
        li: a(ui-sref='dashboards'): i.fa.fa.fa-server &nbsp; Dashboard
      ul.nav.navbar-nav.navbar-right(ng-show='activeUser')
        //- li: a(ui-sref='home'): i.fa.fa.fa-home &nbsp; Home
        li: a(ui-sref='about'): i.fa.fa.fa-info &nbsp; About
        //- li: a(ui-sref='faq'): i.fa.fa.fa-question &nbsp; FAQ
        li: a(ui-sref='contact'): i.fa.fa.fa-phone &nbsp; Contact
        li: a(ui-sref='profile'): i.fa.fa.fa-user &nbsp; Profile
        li: button.btn.btn-primary#logout(ng-click='logout()'): i.fa.fa-sign-out &nbsp; LogOut: {{displayName}}
      ul.nav.navbar-nav.navbar-right(ng-hide='activeUser')
        li: a(ui-sref='register'): i.fa.fa-user-plus &nbsp; Register
        li: a(ui-sref='login'): i.fa.fa-key &nbsp; Login
